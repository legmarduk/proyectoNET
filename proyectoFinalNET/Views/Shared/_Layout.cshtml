<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/Redirect.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="menu" class="navbar navbar-expand-md">
        <div class="container">
            <a class="navbar-brand" href="#">Veterinaria</a>
            <div class="navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="../Mascotas/">Ingresar Mascota</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Nueva Visita</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../Mascotas/ventanaHistorial">Historial</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../Veterinario">Veterinario</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mascotas APP para el ramo de .NET por Daniel Solar e Ian Lopez</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
